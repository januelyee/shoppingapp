<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="rdsSecurityTest" transaction-type="RESOURCE_LOCAL">
        <description>This unit manages Risk entities</description>
        <jta-data-source>jdbc/riskDS</jta-data-source>

        <class>com.refineddata.security.entities.application.ApplicationEntity</class>
        <class>com.refineddata.security.entities.application.ModuleEntity</class>
        <class>com.refineddata.security.entities.application.FeatureEntity</class>

        <class>com.refineddata.security.entities.company.CompanyEntity</class>
        <class>com.refineddata.security.entities.company.CompanyUserEntity</class>
        <class>com.refineddata.security.entities.company.CompanyApplicationEntity</class>
        <class>com.refineddata.security.entities.company.CompanyApplicationUserEntity</class>
        <class>com.refineddata.security.entities.company.CompanyApplicationRoleEntity</class>
        <class>com.refineddata.security.entities.company.CompanyApplicationUserRoleEntity</class>
        <class>com.refineddata.security.entities.company.AuthenticationInformationEntity</class>

        <class>com.refineddata.security.entities.user.UserEntity</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/security"/>
            <property name="javax.persistence.jdbc.user" value="risk"/>
            <property name="javax.persistence.jdbc.password" value="goleafsgo"/>

            <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
            <property name="eclipselink.persistence-context.flush-mode" value="auto"/>
            <property name="eclispelink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.thread" value="true"/>
            <property name="eclipselink.logging.session" value="true"/>
            <property name="eclipselink.logging.exceptions" value="true"/>
            <property name="eclipselink.logging.timestamp" value="true"/>
        </properties>
    </persistence-unit>
</persistence>